# SnapLinked - Configurações de Ambiente v4.1.0
# Copie este arquivo para .env e configure os valores

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/snaplinked
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///snaplinked.db

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Redis Configuration (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# LinkedIn API (if using official API)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/snaplinked.log

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/3

# File Upload
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads/

# Security
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Frontend Configuration (for .env in frontend directory)
# VITE_API_URL=http://localhost:5000/api
# VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
